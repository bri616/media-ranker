<h2>Beers</h2>

<table class="table-hover table-responsive col-sm-12">
  <tr>
    <td>Votes</td>
    <td>Album Name</td>
    <td>Upvote</td>
  </tr>
  <% @beers.each do |beer| %>
  <tr>
    <td>Votes: <%= beer.votes %></td>
    <!-- I googled the link_to stuff below and it works but it seems v magical -->
    <td><%= link_to "#{beer.name}", beer %></td>
    <td><%= link_to upvote_beer_path(beer), {:method => "POST", :class => "btn btn-default btn-md"} do %>
      <span class="glyphicon glyphicon-thumbs-up"></span>
    <% end %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Add New Beer", new_beer_path, :class => "btn btn-info" %>
